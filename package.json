{
    "name": "puck",
    "publisher": "NextBlock",
    "displayName": "Puck AI Assistant",
    "description": "Puck is an AI assistant for VS Code. It can help you with your code, or just be a friend.",
    "version": "0.1.5",
    "repository": {
        "type": "git",
        "url": "https://github.com/nextblock-ai/puck-bash-commander.git"
    },
    "engines": {
        "vscode": "^1.77.0"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "configuration": {
            "title": "puck Settings",
            "properties": {}
        },
        "commands": [
            {
                "title": "Puck - Open Bash Commander",
                "command": "puck.bashCommander"
            },
            {
                "title": "Puck - Set OpenAI API Key",
                "command": "puck.setOpenAIKey"
            },
            {
                "title": "Puck - Open Assistant Chat",
                "command": "puck.openChat"
            },
            {
                "command": "puck.adhocChat",
                "title": "Puck - Adhoc Chat"
            },
            {
                "command": "puck.insertSystemTag",
                "title": "Puck - Insert üåê"
            },
            {
                "command": "puck.insertUserTag",
                "title": "Puck - Insert üë§"
            },
            {
                "command": "puck.insertAssistantTag",
                "title": "Puck - Insert ü§ñ"
            },
            {
                "command": "puck.submitChat",
                "title": "Puck - Submit Chat"
            },
            {
                "command": "puck.openChatDocumentView",
                "title": "Puck - Open Chat Document"
            }
        ],
        "customEditors": [
            {
                "viewType": "chatEditor",
                "displayName": "Conversation Editor",
                "selector": [
                    {
                        "filenamePattern": "*.chat"
                    }
                ],
                "priority": "default"
            }
        ]
    },
    "configuration": {
        "title": "Puck Settings",
        "properties": {
            "puck.apikey": {
                "type": "password",
                "default": "sk-",
                "description": "API key for the OpenAI GPT service."
            },
            "puck.configuration": {
                "type": "string",
                "default": "{}",
                "description": "The configuration to use for the OpenAI GPT service."
            },
            "puck.systemDelimiter": {
                "type": "string",
                "default": "üåê",
                "description": "The delimiter to use for system messages"
            },
            "puck.userDelimiter": {
                "type": "string",
                "default": "üë§",
                "description": "The delimiter to use for user messages"
            },
            "puck.assistantDelimiter": {
                "type": "string",
                "default": "ü§ñ",
                "description": "The delimiter to use for assistant messages"
            }
        }
    },
    "icon": "./icon.png",
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/blessed": "^0.1.21",
        "@types/diff": "^5.0.3",
        "@types/glob": "^8.1.0",
        "@types/markdown-it": "^12.2.3",
        "@types/marked": "^4.0.8",
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.18.31",
        "@types/react-dom": "^18.2.1",
        "@types/sha256": "^0.2.0",
        "@types/shelljs": "^0.8.12",
        "@types/split2": "^4.2.0",
        "@types/through2": "^2.0.38",
        "@types/vscode": "^1.77.0",
        "@types/xmlserializer": "^0.6.3",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.36.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@nomyx/assistant": "^1.2.5",
        "@nomyx/assistant-tools": "^1.2.5",
        "axios": "^1.4.0",
        "bash-parser": "^0.5.0",
        "diff": "^5.1.0",
        "dotenv": "^16.3.1",
        "ohm-js": "^17.1.0",
        "sha256": "^0.2.0",
        "shelljs": "^0.8.5",
        "split2": "^4.2.0",
        "through2": "^4.0.2"
    }
}
